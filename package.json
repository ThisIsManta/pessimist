{
	"name": "@thisismanta/pessimist",
	"version": "1.0.0",
	"author": "Anantachai Saothong <thisismanta@gmail.com>",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/ThisIsManta/pessimist.git"
	},
	"keywords": [
		"argv",
		"parser",
		"minimist"
	],
	"engines": {
		"node": ">=16.0.0"
	},
	"main": "out/index.js",
	"types": "out/index.d.ts",
	"files": [
		"out/index.js",
		"out/index.d.ts"
	],
	"scripts": {
		"test": "jest --coverage",
		"build": "esbuild src/index.ts --bundle --outfile=out/index.js --platform=node --minify && tsc src/index.ts --declaration --emitDeclarationOnly --esModuleInterop && mv src/index.d.ts out/index.d.ts",
		"preversion": "npm run build",
		"version": "npm publish --access public"
	},
	"devDependencies": {
		"@thisismanta/semantic-version": "^5.0.2",
		"@types/jest": "^29.4.0",
		"@types/lodash": "^4.14.191",
		"esbuild": "^0.17.11",
		"jest": "^29.4.3",
		"lodash": "^4.17.21",
		"ts-jest": "^29.0.5",
		"typescript": "^4.9.5"
	},
	"jest": {
		"preset": "ts-jest",
		"resetMocks": true
	}
}
